# GraphQL schema example
#
# https://gqlgen.com/getting-started/

# Scalars
scalar Time

type User {
  id: ID!
  createdAt: Time
  updatedAt: Time
  deletedAt: Time
  Name:     String!
  Email:     String!
  activated: Boolean
  version:   Int
}

type Query {
  users: [User!]!
}

input NewUserInput {
  name: String!
  lastName: String!
  email: String!
}

type Mutation {
  createUser(input: NewUserInput!): User!
}
